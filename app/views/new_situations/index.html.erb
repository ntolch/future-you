<p id="notice"><%= notice %></p>

<h1>Listing New Situations</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @new_situations.each do |new_situation| %>
      <tr>
        <td><%= new_situation.description %></td>
        <td><%= new_situation.user %></td>
        <td><%= link_to 'Show', new_situation %></td>
        <td><%= link_to 'Edit', edit_new_situation_path(new_situation) %></td>
        <td><%= link_to 'Destroy', new_situation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New New situation', new_new_situation_path %>
