<p id="notice"><%= notice %></p>

<h1>Listing Recommended Decisions</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommended_decisions.each do |recommended_decision| %>
      <tr>
        <td><%= recommended_decision.content %></td>
        <td><%= link_to 'Show', recommended_decision %></td>
        <td><%= link_to 'Edit', edit_recommended_decision_path(recommended_decision) %></td>
        <td><%= link_to 'Destroy', recommended_decision, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recommended decision', new_recommended_decision_path %>
